<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title class="title-area">WorkoutPartner</title>
  <%= stylesheet_link_tag 'application', media: 'all' %>
  <%= csrf_meta_tags %>

</head>
<body id="grad">
  <div class="main-title">
    <h1>
      <a href='<%= workouts_path %>'>
        <span class="fa-stack">
          <i class="fa fa-star fa-stack-2x orange"></i>
          <i class="fa fa-check fa-stack-1x"></i>
        </span>
        WorkoutPartner</a>
    </h1>
  </div>
  <%= render "layouts/flash" %>

  <div class="off-canvas-wrap fixed" data-offcanvas>
    <div class="inner-wrap">

      <%= render "layouts/small_nav_bar.html" %>
      <%= render "layouts/not_small_nav_bar.html" %>

      <section class="main-section">
        <div class="row fullWidth">
          <div class="small-12 small-centered text-center">
            <div class="row">
              <div class="medium-8 medium-offset-2 custom-container container has-table">
              <%= yield %>
              </div>
            </div>
          </div>
      </section>
        <a class="exit-off-canvas"></a>
        </div>
    </div>
  </div>
  <%= javascript_include_tag 'application' %>
  <%= yield :extra_footer %>
</body>
