<dl class="tabs five-up show-for-small nav-top">
  <%- if current_user -%>
    <dd class=<%= class_active("index", "workouts") %>><%= link_to "View", workouts_path %></dd>
    <dd class=<%= class_active("new", "workouts") %>><%= link_to "Create", new_workout_path %></dd>
    <dd><%= link_to 'Sign Out', destroy_user_session_path, method: :delete %></dd>
  </dl>
  <dl class="tabs five-up show-for-small nav-bottom">
    <% if will_show_nav_items_for?("show", "workouts") || will_show_nav_items_for?("edit", "workouts")%>
    <dd class=<%= class_active("show", "workouts") %>><%= link_to "Details", workout_path(@workout) %></dd>
      <dd class=<%= class_active("edit", "workouts") %>><%= link_to "Edit", edit_workout_path(@workout) %></dd>
      <dd><%= link_to 'Delete',  workout_path(@workout),  method: :delete, data: { confirm: 'Are you sure you want to delete this workout?' } %></dd>
    <% end %>
  <%- else -%>
    <dd><%= link_to 'Sign Up', new_user_registration_path %></dd>
    <dd><%= link_to 'Sign In', new_user_session_path %></dd>
  <%- end -%>
</dl>
